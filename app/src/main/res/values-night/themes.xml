<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/black</item>
    </style>

    <style name="SettingsBackground" parent="Theme.PlaylistMaker">
        <item name="background">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="SettingsName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_main_22sp</item>
        <item name="android:padding">@dimen/icons_and_settings_12dp</item>

    </style>

    <style name="SettingsTextDarkTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>


    </style>

    <style name="SettingsText">
        <item name="android:paddingHorizontal">@dimen/icons_and_settings_12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_height_61dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SwitchDarkTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:checked">true</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="IconsShare">
        <item name="android:src">@drawable/share</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:cropToPadding">false</item>

    </style>

    <style name="IconsSupport" parent="IconsShare">
        <item name="android:src">@drawable/support</item>
    </style>

    <style name="IconsAgreement" parent="IconsShare">
        <item name="android:src">@drawable/agreement</item>
    </style>

    <style name="BackArrowFromPlayer">
        <item name="android:src">@drawable/back_arrow_24dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SearchEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">@dimen/search_radius_padding_8dp</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="maxLines">30</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:drawablePadding">@dimen/search_radius_padding_8dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:hint">@string/search</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/icons_and_settings_12dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

    <style name="ClearSearchButton" parent="IconsShare">
        <item name="android:layout_marginEnd">@dimen/icons_and_settings_12dp</item>
        <item name="android:src">@drawable/clear_button</item>
        <item name="android:tint">@color/black</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TrackTextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>
    <style name="TrackTextStyleMini" parent="TrackTextStyle">
        <item name="android:textSize">@dimen/artist_name_11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextError">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_19sp</item>
    </style>

    <style name="UpdateButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="NewPlaylistButton" parent="UpdateButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NoConnectionImage">
        <item name="android:src">@drawable/no_connection</item>
    </style>

    <style name="NothingFoundImage">
        <item name="android:src">@drawable/nothing_found</item>
    </style>

    <style name="NothingFoundMediateka" parent="NothingFoundImage">
        <item name="drawableTopCompat">@drawable/nothing_found</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_80dp</item>
    </style>

    <style name="PlayerSongName">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_main_22sp</item>
    </style>

    <style name="PlayerArtistName" parent="PlayerSongName">
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="PlayerSongParameters" parent="PlayerSongName">
        <item name="android:textColor">@color/grey_icons</item>
        <item name="android:textSize">@dimen/text_13sp</item>
    </style>

    <style name="PlayerSongParametersValues" parent="PlayerSongParameters">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayButton">
        <item name="android:src">@drawable/play_button</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="AddToPlaylistButton"><item name="android:src">@drawable/add_to_playlist_button</item></style>
    <style name="LikeButton"><item name="android:src">@drawable/like_button</item></style>

    <style name="ToolbarColor">
        <item name="navigationIconTint">@color/white</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="TabLayoutTheme" parent="SettingsBackground">
        <item name="android:background">@null</item>
    </style>

    <style name="NavigationViewStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>
        <item name="android:elevation">0dp</item>
        <item name="itemIconTint">@drawable/menu_color</item>
        <item name="itemTextColor">@drawable/menu_color</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
        <item name="elevationOverlayColor">@color/grey_search</item>
    </style>

    <style name="ScreenOuterLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="PlaylistEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/grey_icons</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxStrokeColor">@drawable/stroke_color_night</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="NewPlaylist_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheetStyle">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="View_color">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>