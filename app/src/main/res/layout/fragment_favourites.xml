<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SettingsBackground">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favouriteTracksRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/otstup_knopok_16dp"
        android:layout_marginTop="@dimen/otstup_knopok_16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/search_track" />

    <TextView
        android:id="@+id/nothingFound"
        style="@style/NothingFoundMediateka"
        android:layout_marginTop="@dimen/layout_marginTop_120dp"
        android:text="@string/your_media_isEmpty"
        android:visibility="visible" />
</FrameLayout>