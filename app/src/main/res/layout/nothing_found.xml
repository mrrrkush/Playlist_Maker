<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nothing_found"
    android:paddingHorizontal="@dimen/button_dimen_24dp"
    android:orientation="vertical"
    style="@style/SettingsBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/NothingFoundImage"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_102dp">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/otstup_knopok_16dp"
        android:text="@string/nothing_found"
        style="@style/TextError"
        android:gravity="center_horizontal"
        >

    </TextView>
</LinearLayout>