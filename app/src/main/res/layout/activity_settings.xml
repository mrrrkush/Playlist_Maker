<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="12dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"

        android:backgroundTint="@color/white"
        android:text="@string/settings"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_main"
        android:textAppearance="@font/ys_display_medium"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="start"


        app:icon="@drawable/back_arrow"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icons"
        app:iconTint="@color/black_text"


        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        
        android:text="@string/dark_theme"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_settings"
        android:textAppearance="@font/ys_display_medium"
        android:fontFamily="@font/ys_display_medium"

        />

</LinearLayout>