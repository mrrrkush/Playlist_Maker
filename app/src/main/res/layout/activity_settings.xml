<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
   >

    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"

        android:backgroundTint="@color/white"
        android:text="@string/settings"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_main"
        android:textAppearance="@font/ys_display_medium"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="start"

        app:icon="@drawable/back_arrow"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icons_and_settings"
        app:iconTint="@color/black_text"


        />

  <!--  <TextView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:gravity="center_vertical"
        android:text="@string/dark_theme"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_settings"
        android:textAppearance="@font/ys_display_medium"
        android:fontFamily="@font/ys_display_medium"


        /> -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/settings_height"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/icons_and_settings">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/dark_theme"
            android:layout_height="wrap_content"

            android:textColor="@color/black_text"
            android:textSize="@dimen/text_settings"
            android:textAppearance="@font/ys_display_medium"
            android:fontFamily="@font/ys_display_medium"
            />
        <Switch
            android:id="@+id/themeSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />



    </LinearLayout>



    <TextView
        android:paddingHorizontal="@dimen/icons_and_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_height"
        android:gravity="center_vertical"
        android:text="@string/share"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_settings"
        android:textAppearance="@font/ys_display_medium"
        android:fontFamily="@font/ys_display_medium"
        app:drawableEndCompat="@drawable/share" />


    <TextView
        android:paddingHorizontal="@dimen/icons_and_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_height"
        android:gravity="center_vertical"
        android:text="@string/support"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_settings"
        android:textAppearance="@font/ys_display_medium"
        android:fontFamily="@font/ys_display_medium"
        app:drawableEndCompat="@drawable/support"/>

    <TextView
        android:paddingHorizontal="@dimen/icons_and_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_height"
        android:gravity="center_vertical"
        android:text="@string/agreement"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_settings"
        android:textAppearance="@font/ys_display_medium"
        android:fontFamily="@font/ys_display_medium"
        app:drawableEndCompat="@drawable/agreement"/>

</LinearLayout>