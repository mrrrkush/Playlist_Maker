<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="iconPadding">@dimen/icons_and_settings_12dp</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">16dp</item>

        <item name="android:textSize">@dimen/text_main_22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">500</item>


    </style>
    <style name="MainTextAppName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_main_22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>

    </style>
    
</resources>